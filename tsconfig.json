{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "outDir": "./dist/",
    "typeRoots": ["src/typings/global.d.ts"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"],
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@Native/*": ["./src/native/*"],
      "@Builders": ["./src/builders/index.ts"],
      "@Components/*": ["./src/components/*"],
      "@Types/*": ["./src/typings/*"],
      "@DataPacks/*": ["./src/dataPacks/*"],
      "@Misc/*": ["./src/misc/*"],
      "@Bootloader": ["./src/index.tsx"],
      "@Styles/*": ["./src/styles/*"],
      "@Strings": ["./src/localization/index.ts"],
      "@Views": ["./src/views/index.ts"],
      "@Dom": ["./src/dom/index.ts"],

      // Packages
      "#OnsenUI-Package": ["./node_modules/onsenui/package.json"],
      "#React-OnsenUI-Package": ["./node_modules/react-onsenui/package.json"],
      "#React-Bootstrap-Package": ["./node_modules/react-bootstrap/package.json"],
      "#React-Package": ["./node_modules/react/package.json"],
      "#Package": ["./package.json"]
    }
  },
  "include": ["./src/**/*"]
}
