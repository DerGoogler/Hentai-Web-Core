{
  "compilerOptions": {
    "outDir": "./dist/",
    "typeRoots": ["src/typings/global.d.ts"],
    "lib": ["ES2015", "dom", "ES2017"],
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@Native/*": ["native/*"],
      "@Builders": ["builders/index.ts"],
      "@Components/*": ["components/*"],
      "@Types/*": ["typings/*"],
      "@DataPacks/*": ["dataPacks/*"],
      "@Misc/*": ["misc/*"],
      "@Bootloader": ["index.tsx"],
      "@Styles/*": ["styles/*"],
      "@Strings": ["localization/index.ts"],
      "@Views": ["views/index.ts"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "types": ["node"]
    }
  },
  "include": ["./src/**/*"]
}
